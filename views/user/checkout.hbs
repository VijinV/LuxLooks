          <div class="wrap-table-shopping-cart col-md-6">
            <form action="/addAddress" method="post">
              <div class="mb-3">
                <label for="email" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="name"
                  
                  placeholder="Tony Stark "
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Phone</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="mobile"
                  placeholder="+91 12345 67812"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="address"
                  placeholder="ironman@gmail.com"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">City</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="city"
                  placeholder="KLM"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">State</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="state"
                  placeholder="Kerala"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">pincode</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="zip"
                  placeholder="928322"
                  autofocus
                />
              </div>


              <button class="btn btn-primary" type="submit">Add Address</button>


            </form>
          </div>
