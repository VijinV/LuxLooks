<script>
  const input = document.querySelector('#couponInput')
$('#coupon-btn').click(function(e){
  e.preventDefault();
  const coupon = input.value
  $.ajax({
    url:'/applyCoupon',
    type:'POST',
    data:{coupon},
    success:function(data){
      console.log(data)
      $('#message').text(data.message);
      $('.grand-total').text(data.updatedTotal)
      $('#couponDiscount').text(data.couponDiscount)
    },
    error:function(jqXHR,textStatus,errorThrown){
      console.log(textStatus,errorThrown)
    }
  })
})
</script>
