<section style="height: 128vh; background-color: #111927;
    background-image: 
        radial-gradient(at 47% 33%, hsl(162.00, 77%, 40%) 0, transparent 59%), 
        radial-gradient(at 82% 65%, hsl(218.00, 39%, 11%) 0, transparent 55%);">
    <section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card"  style="border-radius: 1rem;  backdrop-filter: blur(6px) saturate(117%);
    -webkit-backdrop-filter: blur(6px) saturate(117%);
    background-color: rgba(17, 25, 40, 0.48);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.125); color: #e5e1e1;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">welcome to</h2>

              <h3 class="fw-bold mb-2 text-uppercase">Luxe Looks</h3>

              <form action="/register" method="post">

              <p class="text-white-50 mb-5">{{message}}</p>

                <div class="form-outline form-white mb-4">
                <input type="text" onkeyup="validateName()" style="color: #e5e1e1; background: transparent; border:solid #112c43; " id="usrname" class="form-control form-control-lg" name="name" />

                <label class="form-label" for="typeEmailX">Name</label>
                <small style="color: red;" id="nameerror"></small>
              </div>
              <div class="form-outline form-white mb-4">
               <input onkeyup="validateEmail()" type="email" style="color: #e5e1e1; background: transparent; border:solid #112c43; " id="email" class="form-control form-control-lg" name="email" />
                <label class="form-label" for="typeEmailX">Email</label>
                 <small style="color: red;" id="emialerror"></small>
              </div>
              <div class="form-outline form-white mb-4">
                <input onkeyup="validatePhoneNumber()" type="number" style="color: #e5e1e1; background: transparent; border:solid #112c43; " id="phone" class="form-control form-control-lg" name="mobile" />
                <label class="form-label" for="typeEmailX">Phone No</label>
                 <small style="color: red;" id="phoneerror"></small>
              </div>

              <div class="form-outline form-white mb-4">
               <input onkeyup="validatePassword()" type="password" style="color: #e5e1e1; background: transparent; border:solid #112c43; " id="password" class="form-control form-control-lg" name="password" />
                <label class="form-label" for="typePasswordX">Password</label>
                 <small style="color: red;" id="passworderror"></small>
              </div>

               <div class="form-outline form-white mb-4">
                <input onkeyup="validateConfirmPassword()" type="password" style="color: #e5e1e1; background: transparent; border:solid #112c43; " id="typeEmailX" class="form-control form-control-lg" />
                <label class="form-label" for="confirmpass">Confirm Password</label>
                 <small style="color: red;" id="confirmpasserror"></small>
              </div>


              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Already have an account ?</a></p>

              <button onclick="validateSubmit()" class="btn btn-outline-light btn-lg px-5" type="submit">Sign up</button>
               <small style="color: red;" id="submiterror"></small>
              </form>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</section>